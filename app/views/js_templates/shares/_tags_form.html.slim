= form_for Share.new,\
    :remote => true,\
    :url => '/shares/${share_id}/update_tags',\
    :method => :put,\
    :html => {\
      :data => {\
        :ok_icon_path => theme_image_path('ok.png'),\
        :error_icon_path => theme_image_path('warning.png')\
      },\
      :class => 'share area update-form update-tags-form form-inline',\
      :id => 'update-tags-form'\
    } do |f|

  .control-group.form-group
    .controls
      = f.text_field :tags, :size => 16, :maxlength => 255, :class=>'form-control input-sm right-margin-10', :placeholder => '(add tags)'
  .control-group.form-group
    .controls
      = spinner
      = f.submit "#{t('change')}".html_safe, :class => 'btnn btn btn-info btn-sm'
      = link_to t('cancel'), '#', :class => 'close-update-tags-area cancel-link btn btn-primary btn-sm left-margin-10'
